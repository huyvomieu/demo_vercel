extends ../layouts/default.pug
block content
  main
  .pay
    .head-list-detail
      h1 LIST OF TICKET
      h1 DETAIL OF TICKET
    .payment
      .pl
        ul.menu
         each record in records
          li#toggleElement.toggle-element(onclick='showTicketDetail(0)')
            .left
              img(src=  record.MovieInfo.avatar alt='')
            .middle
              p.namefilm #{record.MovieInfo.name}
              .time
                p.date #{record.time}
                p.hour Time : 10:00 AM
              p.mseat #{record.seats}
            .right &gt;
      .tk_pr
          .line
            p Order ID
            p#orderID XXXXXXXXX
          .line
            span Seats
            p#seats_buy XX
          .line
            span Date
            p#datetimeticket XX/XX/XXXX
          .line
            span Time
            p#time XX:XX am
          .line
            span Room
            p#Room XXXXXXXXXX
          .line
            span Price
            p#price
              | XXXXXXXXXX 
              span VND
          .line
            span Discount
            p#discount XX%
          .line.thanh
          .line.total
            span Total Price
            p#totalPrice.totalprice
              | XXXXXXXX 
              span  VND
          .line.buytick
            button#closeMessageButton.buyticket(type='button' onclick='resetDetail()')
              | Close
    // // thông báo
