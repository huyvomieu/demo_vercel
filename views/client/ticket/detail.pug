      <div id="customMessage" class="hidden">
      <div class="list_tt">
      <p>You want to cancel movie ticket?</p>
      </div>
      <div class="list_tt">
      <button id="closeMessageButton">Close</button>
      <button id="acceptMessageButton">Accept</button>
      </div>
      </div>
  section.detailOfticket
