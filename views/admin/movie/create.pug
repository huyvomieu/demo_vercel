extends ../layouts/main.pug
include ../../mixins/alert.pug
block content
    
    .form.my-3
        form(class= "form" action="/admin/movie/create", method="post")
            .form-group
                label() Title
                input.form-control(type="text", placeholder="", id="name", name="name" required)
            .form-group
                label() Price
                input.form-control(type="text", placeholder="", id="price", name="price" required)
            .form-group
                label() Description
                input.form-control(type="text", placeholder="", id="description", name="description" required)
            .form-group
                label() Author
                input.form-control(type="text", placeholder="", id="author", name="author" required)
            .form-group
                label() Performer
                input.form-control(type="text", placeholder="", id="performer", name="performer" required)
            .form-group
                label() Duration
                input.form-control(type="text", placeholder="", id="duration", name="duration" required)
            .form-group
                label() Start date
                input.form-control(type="text", placeholder="", id="date", name="date" required)
            .form-group
                label() Image
                input.form-control(type="text", placeholder="Link Image" id="avatar", name="avatar" required)
            button(type="submit" class="btn btn-primary") Create
